{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "ES6",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src"]
}
